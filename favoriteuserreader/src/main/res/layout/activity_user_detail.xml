<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrapper_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_user_avatar"
                android:layout_width="@dimen/large_40"
                android:layout_height="@dimen/large_40"
                android:layout_marginTop="@dimen/normal_100"
                android:contentDescription="@string/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_favorite"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:background="@drawable/circle_grey"
                app:icon="@drawable/ic_favorite"
                app:layout_constraintEnd_toEndOf="@id/img_user_avatar"
                app:layout_constraintTop_toTopOf="@id/img_user_avatar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/small_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_100"
                android:layout_marginTop="@dimen/normal_100"
                android:textSize="@dimen/headline_5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_user_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_company"
                android:layout_width="@dimen/small_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_100"
                android:textSize="@dimen/subtitle_01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_user_avatar"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_location"
                android:layout_width="@dimen/small_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_100"
                android:textSize="@dimen/subtitle_01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_user_avatar"
                app:layout_constraintTop_toBottomOf="@+id/tv_company" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/wrapper_user_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrapper_user_info"
            android:layout_marginTop="@dimen/normal_100"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="@dimen/small_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_125"
                android:layout_marginEnd="@dimen/small_62"
                android:layout_weight="1"
                android:background="@drawable/rounded_square_white_black"
                android:orientation="vertical"
                android:padding="@dimen/small_125">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/repository"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/subtitle_01"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_repository"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/subtitle_01" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="@dimen/small_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_62"
                android:layout_marginTop="@dimen/small_125"
                android:layout_marginEnd="@dimen/small_62"
                android:layout_weight="1"
                android:background="@drawable/rounded_square_white_black"
                android:orientation="vertical"
                android:padding="@dimen/small_125">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/follower"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/subtitle_01"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_follower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/subtitle_01" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="@dimen/small_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_62"
                android:layout_marginTop="@dimen/small_125"
                android:layout_weight="1"
                android:background="@drawable/rounded_square_white_black"
                android:orientation="vertical"
                android:padding="@dimen/small_125">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/following"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/subtitle_01"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_following"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/subtitle_01" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrapper_user_info_card"
            android:layout_marginTop="@dimen/normal_100"
            android:background="@drawable/rounded_top_square_green"
            app:tabGravity="fill"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="@dimen/small_62"
            app:tabMaxWidth="@dimen/small_0"
            app:tabSelectedTextColor="@color/primaryDarkColor" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_200"
            android:layout_below="@+id/tab_layout" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_user_avatar_shimmer"
                        android:layout_width="@dimen/large_40"
                        android:layout_height="@dimen/large_40"
                        android:layout_marginTop="@dimen/normal_100"
                        android:background="@drawable/circle_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_name_shimmer"
                        android:layout_width="@dimen/small_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_100"
                        android:layout_marginTop="@dimen/normal_100"
                        android:background="@drawable/rounded_square_grey"
                        android:textSize="@dimen/headline_5"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_user_avatar_shimmer"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_company_shimmer"
                        android:layout_width="@dimen/small_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_100"
                        android:layout_marginTop="@dimen/small_37"
                        android:background="@drawable/rounded_square_grey"
                        android:textSize="@dimen/subtitle_01"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_user_avatar_shimmer"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name_shimmer" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_location_shimmer"
                        android:layout_width="@dimen/small_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_100"
                        android:layout_marginTop="@dimen/small_37"
                        android:background="@drawable/rounded_square_grey"
                        android:textSize="@dimen/subtitle_01"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_user_avatar_shimmer"
                        app:layout_constraintTop_toBottomOf="@+id/tv_company_shimmer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/wrapper_user_info_card_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_100"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/small_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_125"
                        android:layout_marginEnd="@dimen/small_62"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_square_white_black"
                        android:orientation="vertical"
                        android:padding="@dimen/small_125">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/repository"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/subtitle_01"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_grey"
                            android:gravity="center"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/subtitle_01" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/small_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_62"
                        android:layout_marginTop="@dimen/small_125"
                        android:layout_marginEnd="@dimen/small_62"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_square_white_black"
                        android:orientation="vertical"
                        android:padding="@dimen/small_125">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/follower"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/subtitle_01"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_grey"
                            android:gravity="center"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/subtitle_01" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="@dimen/small_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_62"
                        android:layout_marginTop="@dimen/small_125"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_square_white_black"
                        android:orientation="vertical"
                        android:padding="@dimen/small_125">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/following"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/subtitle_01"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_square_grey"
                            android:gravity="center"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/subtitle_01" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>