<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udhipe.githubuserex">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
        </intent>
    </queries>

    <application
        android:name=".app.GithExApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserExplorer">

        <provider
            android:name=".provider.UserProvider"
            android:authorities="com.udhipe.githubuserex.provider"
            android:enabled="true"
            android:exported="true"/>

        <receiver android:name=".widget.FavoriteUserWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_user_widget_info" />
        </receiver>

        <receiver
            android:name=".utility.ReminderReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".setting.SettingActivity" />
        <activity android:name=".userfavorite.UserFavoriteActivity" />
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".about.AboutAppActivity" />
        <activity android:name=".userdetail.UserDetailActivity" />
        <activity android:name=".userlist.UserListActivity" />

        <service
            android:name=".widget.FavoriteUserService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>