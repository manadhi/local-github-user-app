<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userlist.UserListActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/search_hint" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_github_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_0"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
        android:paddingTop="@dimen/small_100"
        android:paddingBottom="@dimen/small_100"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_view"
        tools:itemCount="12"
        tools:listitem="@layout/item_github_user" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_0"
        android:layout_marginStart="@dimen/normal_100"
        android:layout_marginEnd="@dimen/normal_100"
        android:gravity="center"
        android:paddingTop="@dimen/small_100"
        android:paddingBottom="@dimen/small_100"
        android:text="@string/empty_list"
        android:textSize="@dimen/subtitle_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_view" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_0"
        app:layout_constraintTop_toBottomOf="@+id/search_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/small_100"
        android:paddingBottom="@dimen/small_100"
        android:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

            <include layout="@layout/item_github_user_shimmer" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>